{
  "name": "quiz-arena-backend",
  "module": "src/server.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun --watch src/server.ts",
    "build": "bun build src/server.ts --outdir dist --target node",
    "start": "bun dist/server.js",
    "migrate": "bun src/database/migrator.ts migrate",
    "migrate:status": "bun src/database/migrator.ts status",
    "migrate:rollback": "bun src/database/migrator.ts rollback",
    "migrate:legacy": "bun src/database/migrate.ts",
    "seed": "bun src/database/seed.ts",
    "db:setup": "bun run migrate && bun run seed",
    "db:reset": "bun run db:drop && bun run db:setup",
    "db:drop": "echo 'Manual database drop required'",
    "deploy:prepare": "bun run build && bun run migrate",
    "deploy:production": "bun run migrate && bun run start"
  },
  "dependencies": {
    "@types/multer": "^1.4.13",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dompurify": "^3.2.6",
    "express": "^5.1.0",
    "html-entities": "^2.6.0",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.1",
    "pg": "^8.16.2",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bun": "latest",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.3",
    "@types/pg": "^8.11.10",
    "typescript": "^5.8.3"
  }
}
